<%= simple_form_for([current_user,@post], multipart: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :movie_title, required: true, autofocus: true  %>
		<%= f.input :url, required: true %>
	  <%= f.input :description, required: true %>
    <%= f.input :poster_image, required: true, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Create Post' %>
  </div>
<% end %>

